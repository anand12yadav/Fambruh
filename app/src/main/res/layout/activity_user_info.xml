<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserInfoActivity"
    android:layout_marginLeft="20dp"
    android:layout_marginTop="30dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/userProfileImage"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:src="@drawable/img3" />

    <TextView
        android:id="@+id/views"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="2dp"
        android:layout_toRightOf="@id/userProfileImage"
        android:padding="10dp"
        android:text="13K"
        android:textSize="40sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/visitors"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="48dp"
        android:layout_marginTop="60dp"
        android:layout_toRightOf="@id/userProfileImage"
        android:padding="10dp"
        android:text=" Profile Views"
        android:textSize="15sp" />

    <Button
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="110dp"
        android:layout_toRightOf="@id/userProfileImage"
        android:background="@drawable/round_buttons_border"
        android:text="Connect"
        android:textColor="@color/colorPrimary" />

    <TextView
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/userProfileImage"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:text="Mark cubin"
        android:textSize="18sp"
        android:textStyle="bold" />

    <android.support.v7.widget.CardView
        android:layout_width="330dp"
        android:layout_height="360dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="170dp"
        android:background="@drawable/round_buttons_border"
        app:cardCornerRadius="10dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/insta"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="30dp"
                android:src="@drawable/instagram" />
            <TextView
                android:id="@+id/instaName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_toRightOf="@id/insta"
                android:padding="5dp"
                android:text="anand__12"
                android:textSize="25sp" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/fb"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="30dp"
                android:layout_below="@id/insta"
                android:src="@drawable/facebook" />

            <TextView
                android:id="@+id/fbName"
                android:layout_below="@id/instaName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_toRightOf="@id/fb"
                android:padding="5dp"
                android:layout_marginTop="10dp"
                android:text="Anand Yadav"
                android:textSize="25sp" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/snapchat"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:layout_below="@id/fb"
                android:src="@drawable/snapchat" />

            <TextView
                android:id="@+id/snapName"
                android:layout_below="@id/fbName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_toRightOf="@id/snapchat"
                android:padding="5dp"
                android:layout_marginTop="20dp"
                android:text="anand_809"
                android:textSize="25sp" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/tiktok"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_below="@id/snapchat"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/tiktok" />

            <TextView
                android:id="@+id/tiktokName"
                android:layout_below="@id/snapName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="35dp"
                android:layout_toRightOf="@id/tiktok"
                android:padding="5dp"
                android:layout_marginTop="15dp"
                android:text="anand_009"
                android:textSize="25sp" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/whatsapp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:layout_below="@id/twitter"
                android:src="@drawable/whatsapp" />
            <TextView
                android:id="@+id/twitterName"
                android:layout_below="@id/tiktokName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="35dp"
                android:layout_toRightOf="@id/whatsapp"
                android:padding="5dp"
                android:layout_marginTop="15dp"
                android:text="anand1zz"
                android:textSize="25sp" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/twitter"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:layout_below="@id/tiktok"
                android:src="@drawable/tw" />
            <TextView
                android:id="@+id/whatsappName"
                android:layout_below="@id/twitterName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="35dp"
                android:layout_toRightOf="@id/whatsapp"
                android:padding="5dp"
                android:layout_marginTop="15dp"
                android:text="Tap connect to get acess to whatsapp chat"
                android:textSize="15sp" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>


    </RelativeLayout>